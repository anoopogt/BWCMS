{% extends "BWCMSBundle:Common:default.html.twig" %}

{% block title %} {{ title }} {% endblock %}
{% block pageTitle %}
    <h1>{{ title }}</h1>
{% endblock %}

{% block header %}

{% endblock %}

{% block body %}
    <div class="col-md-12">
        <table class="table table-striped table-hover table-bordered records_list">
            <thead>
            <tr>
                <th>Name</th>
                <th>Slug</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for entity in entities %}
                <tr>
                    <td>{{ entity.title }}</td>
                    <td>{{ entity.slug }}</td>
                    <td>
                        <div class="btn-group">
                            <a class="btn btn-default btn-sm" href="{{ path('content_edit', {'contentId': entity.id}) }}">
                                <i class="fa fa-edit"></i> Edit
                            </a>
                        </div>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <ul>
            <li>
                <a href="{{ path('content_create', { 'type' : type , 'schema' : schema , 'parent': 'Root' } ) }}">
                    Add New
                </a>
            </li>
        </ul>
    </div>

{% endblock %}

{% block footer %}
{% endblock %}
