{% extends '::base.html.twig' %}

{% block body -%}
    <h1>ThumbStyle</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ entity.slug }}</td>
            </tr>
            <tr>
                <th>Mode</th>
                <td>{{ entity.mode }}</td>
            </tr>
            <tr>
                <th>Width</th>
                <td>{{ entity.width }}</td>
            </tr>
            <tr>
                <th>Height</th>
                <td>{{ entity.height }}</td>
            </tr>
            <tr>
                <th>Background</th>
                <td>{{ entity.background }}</td>
            </tr>
            <tr>
                <th>Options</th>
                <td>{{ entity.options }}</td>
            </tr>
            <tr>
                <th>Quality</th>
                <td>{{ entity.quality }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('thumbstyle') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('thumbstyle_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
