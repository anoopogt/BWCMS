{% block bwcms_collection_widget %}
    {% spaceless %}
        {% if prototype is defined %}
            {% set attr = attr|merge({'data-prototype': form_row(prototype) , 'class': 'FCData'}) %}
        {% endif %}
        <div class="FCHolder" style="border: 1px solid #cccccc;">
            {{ block('form_widget') }}
            <button type="button" class="FCAdd btn btn-primary edit"><i class="glyphicon glyphicon-plus"></i></button>
        </div>
    {% endspaceless %}
{% endblock bwcms_collection_widget %}


{% block bwcms_content_widget %}
    {% spaceless %}
        <div id="{{ holderId }}">
            <input type="text" class="title"><button type="button" class="btn btn-primary" data-url="{{ browserURL }}" onclick="showContentBrowser(this);"><i class="glyphicon glyphicon-plus"></i></button>
            <input id="{{ id }}" type="text" name="{{ full_name }}" class="value" {% if value is not empty %}value="{{ value }}" {% endif %}>
        </div>
    {% endspaceless %}
{% endblock bwcms_content_widget %}
